<h1>Todolists</h1>

<div id="todolists">
  <% @todolists.each do |todolist| %>
    <%= render todolist %>
    <p>
      <%= link_to "Show this todolist", todolist %>
      <%= link_to button_to "Mark as completed", todolist %>
    </p>
  <% end %>
</div>

